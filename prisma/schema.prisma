
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  bots      Bot[]
}

model Bot {
  id           String    @id @default(cuid())
  userId       String
  name         String
  phone        String?
  status       BotStatus @default(PENDING)
  authBucket   String?
  sessionId    String?
  megaLink     String?
  lastOnlineAt DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  user         User      @relation(fields: [userId], references: [id])
  deployments  Deployment[]
}

model Deployment {
  id        String   @id @default(cuid())
  botId     String
  workerId  String
  state     String
  logsUrl   String?
  createdAt DateTime @default(now())
  bot       Bot      @relation(fields: [botId], references: [id])
}

model WebhookEvent {
  id        String   @id @default(cuid())
  botId     String
  type      String
  payload   Json
  createdAt DateTime @default(now())
}

enum BotStatus {
  PENDING
  STARTING
  RUNNING
  STOPPED
  ERROR
  BANNED
}
